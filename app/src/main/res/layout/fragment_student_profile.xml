<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentProfileFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:padding="20sp">

        <Button
            android:id="@+id/BtnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_alignParentStart="true"
            />
        <Button
            android:id="@+id/BtnHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ImgViewProfilePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_foreground"
            android:background="@color/cardview_dark_background"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="20sp"

            />

        <TextView
            android:id="@+id/TxtChangePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change profile"
            android:layout_below="@+id/ImgViewProfilePicture"
            android:layout_marginLeft="25sp"
            android:textStyle="bold"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/TxtFName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="100sp"
            android:layout_marginTop="30sp"
            />

        <TextView
            android:id="@+id/TxtFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TxtFName"
            android:layout_alignEnd="@id/TxtFName"
            android:layout_marginTop="10sp"

            />

        <TextView
            android:id="@+id/TxtLName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@+id/TxtFirstName"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="100sp"
            android:layout_marginTop="30sp"
            />

        <TextView
            android:id="@+id/TxtLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TxtLName"
            android:layout_alignEnd="@id/TxtFName"
            android:layout_marginTop="10sp"

            />

        <TextView
            android:id="@+id/TxtDateOfBirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@+id/TxtLastName"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="100sp"
            android:layout_marginTop="30sp"
            />

        <TextView
            android:id="@+id/TxtAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TxtDateOfBirth"
            android:layout_alignEnd="@id/TxtFName"
            android:layout_marginTop="10sp"

            />

        <TextView
            android:id="@+id/Txtweight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@+id/TxtAge"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="100sp"
            android:layout_marginTop="30sp"
            />

        <TextView
            android:id="@+id/TxtWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Txtweight"
            android:layout_alignEnd="@id/TxtFName"
            android:layout_marginTop="10sp"

            />

        <TextView
            android:id="@+id/Txtheight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@+id/TxtWeight"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="100sp"
            android:layout_marginTop="30sp"
            />

        <TextView
            android:id="@+id/TxtHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Txtheight"
            android:layout_alignEnd="@id/TxtFName"
            android:layout_marginTop="10sp"

            />

        <Button
            android:id="@+id/BtnDeleteProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TxtHeight"
            android:layout_alignEnd="@+id/TxtFName"
            android:layout_marginTop="50sp"
            android:backgroundTint="@color/black"
            android:text="Delete profile"
            android:textColor="#FFFBFB" />
    </RelativeLayout>





</LinearLayout>

</ScrollView>